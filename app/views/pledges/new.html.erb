<h2>Pledge below</h2>

<%= form_for [@project, @pledge] do |f| %>

<% if @pledge.errors.any? %>
  <div class = "alert">
  	<h3>Try again</h3>
    <ul>
  		<% for message in @pledge.errors.full_messages %>
  			<li><%= message %></li>
  		<% end %>
  	</ul>
  </div>
 <% end %>

  <div class="field">
	<%= f.label :amount %>
	<%= f.text_field :amount %>
  </div> 

   <div class="action">
  	<%= f.submit name = "Pledge Now" %>
  </div>

  <% end %>
